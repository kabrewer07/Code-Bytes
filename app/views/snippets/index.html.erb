<% if session[:user_id] %>
  <div class="create-snippet">
    <h3 class="click_create_snippet">create a snippet</h3>
    <%= render 'form' %>
  </div>
<% end %>

<h2>Search</h2>
 <%= search_form_for @q do |f| %>
  <%= f.label :title_cont %>
  <%= f.search_field :title_cont %><br>
  <%= f.label :code_cont %>
  <%= f.search_field :code_cont %><br>
  <%= f.label :tags_title_cont %>
  <%= f.search_field :tags_title_cont %>
  <%= f.submit %>
<% end %>

<% unless @snippets.empty? %>
  <div class="snippets_container">
    <%= render @snippets %>
  </div>
<% end %>

